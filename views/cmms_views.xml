					</group>

 
					
						<newline/>
						
						<field name="name" string="Reference"/>
						<field name="equipment_id"/>
						<field name="Sous_Equip"/>
						<field name="date"/>
						<field name="month" />
						<field name="year" />
						<!-- <field name="sm"/> -->
