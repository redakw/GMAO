                	</group>
					
					<group>
	                	<filter  icon="terp-stage" name="lancer" string="Lancer" domain="[('statut_2','=','lancer')]" help=""/>
	                	<filter  icon="terp-stage" string="Cloturer " domain="[('statut_2','=','cloturer')]" help=""/>
